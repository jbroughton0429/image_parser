{  
   "variables":{  
      "version":"0.1.0",
      "aws_access_key":"",
      "aws_secret_key":"",
      "region":"us-east-1",
      "vpc_id":"vpc-e31ee385",
      "subnet_id":"subnet-5ba1c812"
   },
   "provisioners":[  
      {
        "type": "file",
        "source": "../scripts/run_me_first.sh",
        "destination": "/tmp/run_me_first.sh"
      },
      {
        "type": "file",
	"source": "../../image_parser",
	"destination": "/home/ubuntu/"
      },
         {  
         "type":"shell",
         "inline":[  
            "sleep 30",
            "sudo apt-get update -q",
            "sudo DEBIAN_FRONTEND=noninteractive apt-get upgrade -qy",
            "sudo apt-get install -qy screen python3 python3-pip git chrony apt-transport-https ca-certificates curl wget software-properties-common dialog apt-utils htop virtualenv jq mysql-client unzip",
            "sudo sh /tmp/run_me_first.sh",
	    "/usr/bin/pip3 install s3-client sshtunnel paramiko argparse boto3",
	    "cp /home/ubuntu/image_parser/keys/console ~/.ssh/id_rsa",
	    "cp /home/ubuntu/image_parser/scripts/.screenrc /home/ubuntu/"
         ]
      }
   ],
   "builders":[  
      {  
         "type":"amazon-ebs",
         "access_key":"{{user `aws_access_key`}}",
         "secret_key":"{{user `aws_secret_key`}}",
         "region":"{{user `region`}}",
         "source_ami":"ami-0885b1f6bd170450c",
         "instance_type":"t2.micro",
         "vpc_id":"{{user `vpc_id`}}",
         "subnet_id":"{{user `subnet_id`}}",
         "associate_public_ip_address": "true",
         "ssh_username":"ubuntu",
         "ami_name":"DevOps_2",
         "ami_description":"DevOps Template",
         "tags":{  
            "NodeType":"DevOps",
            "service":"DevOps"
         },
         "run_tags":{  
            "NodeType":"DevOps"
         }
      }
   ]
}
